<h1>Recommend a good book! </h1>

<table class="table">
  
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Author</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.author %></td>
      <td><%= book.title %></td>
      <td><%= book.genre %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure you want to remove this?'} %></td>
    </tr>
    <% end %>
  </tbody>

</table>