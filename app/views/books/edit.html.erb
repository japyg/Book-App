<h1>Edit book recommendations</h1>

<%= form_with(model: @book) do |form| %>
  <% if @book.errors.any? %>
      <div id="error_explanation">
        <p><%= pluralize(@book.errors.count, "error") %>:</p>
        <ul>
          <% @book.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  
  <div class="field">
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :genre %>
  </div>

  <div class="actions">
  
    <%= form.submit :Edit %>
  </div>
<% end %>